@model Yazar

@if (Model != null)
{

	<form method="post" action="">

		<input asp-for="Ad" class="form-control" placeholder="YAZARIN ADI :" value="@Model.Ad" /> <br />
		<input asp-for="Ozgecmis" class="form-control" placeholder="YAZARIN Özgeçmişi :" value="@Model.Ozgecmis" /> <br />

		<button class="btn btn-success" type="submit">Güncelle</button>


	</form>
}
else
{

	<form method="post" action="">

		<input asp-for="Ad" class="form-control" placeholder="YAZARIN ADI :" /> <br />
		<input asp-for="Ozgecmis" class="form-control" placeholder="YAZARIN Özgeçmişi :" /> <br />

		<button class="btn btn-primary" type="submit">Ekle/button>


	</form>
}