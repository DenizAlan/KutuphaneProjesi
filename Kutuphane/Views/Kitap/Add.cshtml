@model Kitap

@{
	var yazarlar = ViewData["Yazarlar"] as List<Yazar>;
	var yayinEvleri = ViewData["YayinEvleri"] as List<YayinEvi>;
}
<form method="post">


	<input asp-for="Ad" placeholder="Kitap adi:" class="form-control" />
	<input asp-for="ISBN" placeholder="Kitap ISBN:" class="form-control" />

	<select asp-for="Yazarlar" asp-items="@(new SelectList(yazarlar,"Id","Ad"))" multiple="multiple" class="form-control"></select>
		
	<select asp-for="YayinEvleri" asp-items="@(new SelectList(yayinEvleri,"Id","Ad"))" multiple="multiple" class="form-control"></select>
			
	<button class="btn btn-primary" type="submit">Kaydet</button>

</form>